.game-container {
  box-sizing: border-box;
  position: absolute;
  padding: 10px;
  width: 100%;
  height: 100%;
  background: #F8F1E9;
}

.game-container .action-panel {
  box-sizing: border-box;
  width: 100%;
  height: 120px;
}

.game-container .action-panel .left {
  float: left;
  background: #EDC818;
  border-radius: 4px;
}

.game-container .action-panel .left .label {
  margin-top: 10px;
  display: block;
  text-align: center;
  color: #fff;
  line-height: 20px;
}

.game-container .action-panel .left .score {
  display: block;
  text-align: center;
  color: #fff;
  line-height: 80px;
  font-size: 50px;
}

.game-container .action-panel .right {
  box-sizing: border-box;
  float: left;
  margin-left: 10px;
  padding: 10px;
  background: #B9AD9D;
  border-radius: 4px;
}

.btn {
  background: #FF9A3E;
  color: #fff;
}


