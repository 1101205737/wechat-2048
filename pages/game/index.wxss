.game-container .border {
  position: absolute;
  bottom: 20px;
  border: 2px solid #B9AD9F;
  border-radius: 3px;
}

.game-container .sqr-wrap {
  position: absolute;
  width: 100%;
  background: #BAADA4;
}

.game-container .cell {
  position: absolute;
  float: left;
  display: block;
  background: #B9AD9F;
  border: 2px solid #B9AD9F;
  box-sizing: border-box;
}

.game-container .cell .placeholder {
  position: relative;
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 8px;
  background: #CBBFB1;
}

.game-container .cell .true-cell {
  position: absolute;
  z-index: 1;
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 8px;
}

.number {
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -15px;
  margin-left: -15px;
  width: 30px;
  height: 30px;
  font-size: 18px;
  line-height: 30px;
  text-align: center;
  color: #000;
}

